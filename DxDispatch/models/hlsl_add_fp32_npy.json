{
    "$schema": "./_schema.json",
    
    "resources": 
    {
        "A": 
        {
            "__initialValuesDataType": "FLOAT32",
            "initialValues": { "sourcePath": "models/hlsl_add_fp32.npy" }
        },
        "B": 
        {
            "__initialValuesDataType": "FLOAT32",
            "initialValues": { "sourcePath": "models/hlsl_add_fp32.npy" }
        },
        "Out": 
        {
            "initialValuesDataType": "FLOAT32",
            "initialValues": { "valueCount": 6, "value": 0 }
        },
        "Constants": 
        {
            "initialValuesDataType": "UNKNOWN",
            "initialValues": 
            [
                { "name": "elementCount", "type": "UINT32",  "value": 6 }
            ],
            "sizeInBytes": 256
        }
    },

    "dispatchables": 
    {
        "add": 
        {
            "type": "hlsl",
            "sourcePath": "models/hlsl_add.hlsl",
            "compiler": "dxc",
            "compilerArgs": 
            [
                "-T", "cs_6_2",
                "-E", "CSMain",
                "-D", "NUM_THREADS=6",
                "-D", "T=float"
            ]
        }
    },

    "commands": 
    [
        {
            "type": "dispatch",
            "dispatchable": "add",
            "threadGroupCount": [ 1, 1, 1 ],
            "bindings": 
            {
                "inputA": "A",
                "inputB": "B",
                "output": "Out",
                "constants": "Constants"
            }
        }
        ,
        {
            "type": "print",
            "resource": "Out"
        }
    ]
}